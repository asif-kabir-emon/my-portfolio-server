generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @map("_id")
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Profile {
  id          String   @id @default(uuid()) @map("_id")
  name        String
  image       String?
  profession  String
  location    String
  about       String
  resumeUrl   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("profiles")
}

model Education {
  id           String   @id @default(uuid()) @map("_id")
  institution  String
  subject      String
  location     String
  startingYear String
  passingYear  String
  cgpa         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("educations")
}

model Experience {
  id            String   @id @default(uuid()) @map("_id")
  company       String
  position      String
  mode          String
  location      String
  startingMonth String
  startingYear  String
  endingMonth   String
  endingYear    String
  duration      String
  description   String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("experiences")
}

model Blog {
  id        String   @id @default(uuid()) @map("_id")
  imageUrl  String
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("blogs")
}

model Skill {
  id        String   @id @default(uuid()) @map("_id")
  name      String   @unique
  level     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("skills")
}

model Project {
  id                  String   @id @default(uuid()) @map("_id")
  imageUrl            String?
  title               String
  description         String?
  liveSiteUrl         String?
  videoUrl            String?
  githubServerSideUrl String?
  githubClientSideUrl String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("projects")
}

model Contact {
  id               String   @id @default(uuid()) @map("_id")
  emailAddress     String
  phoneNumber      String?
  whatsAppNumber   String?
  telegramUsername String?
  contactAddress   String?
  githubUsername   String?
  linkedinUsername String?
  twitterUsername  String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@map("contacts")
}
